<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <!--Custom themes here
            colorPrimary is for main background color and buttons color
            colorSecondary is button text color
            colorAccent is cells backgroundColor and buttons background color

            text color is colorAccent when background is

    -->
    <style name="SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splashbg</item>
        <item name="postSplashScreenTheme">@style/AppThemeWaluigi</item>
    </style>

    <style name="AppThemeWaluigi" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q"> false </item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/harmonia_clear</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorAccent">@color/harmonia_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

</resources>