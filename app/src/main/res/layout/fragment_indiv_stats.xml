<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?android:colorPrimary"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Statistiques individuelles"
            android:textColor="@color/harmonia_dark"
            android:textSize="20sp" />



        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:progressTint="?android:colorAccent"
            tools:targetApi="n_mr1"
            android:layout_below="@id/title"
            android:indeterminate="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/title"
            android:visibility="gone"
            tools:visibility="visible"
            android:paddingHorizontal="15dp"
            android:id="@+id/main_layout">


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"/>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:orientation="vertical">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="@color/harmonia_dark"
                            android:fontFamily="@font/orbitron_semibold"
                            android:textSize="26sp"
                            android:gravity="center"
                            android:id="@+id/war_played"
                            tools:text="73"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="@color/harmonia_dark"
                            android:fontFamily="@font/orbitron_semibold"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:text="wars jouées"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:paddingBottom="10dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/rounded_bg"
                            android:backgroundTint="@color/transparent_white"
                            tools:targetApi="n_mr1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="@color/harmonia_dark"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:textSize="14sp"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:text="V"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="@color/harmonia_dark"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:textSize="14sp"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:text="N"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="@color/harmonia_dark"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:textSize="14sp"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:text="D"/>

                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="@color/harmonia_dark"
                                    android:fontFamily="@font/orbitron_semibold"
                                    android:textSize="20sp"
                                    android:gravity="center"
                                    android:id="@+id/win_text"
                                    android:paddingBottom="5dp"
                                    tools:text="43"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="@color/harmonia_dark"
                                    android:fontFamily="@font/orbitron_semibold"
                                    android:textSize="20sp"
                                    android:gravity="center"
                                    android:id="@+id/tie_text"
                                    android:paddingBottom="5dp"
                                    tools:text="2"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="@color/harmonia_dark"
                                    android:fontFamily="@font/orbitron_semibold"
                                    android:textSize="20sp"
                                    android:gravity="center"
                                    android:id="@+id/lose_text"
                                    android:paddingBottom="5dp"
                                    tools:text="28"/>

                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>



                </LinearLayout>

                <fr.harmoniamk.statsmk.ui.PieChart
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/piechart"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingVertical="5dp"
                android:background="@drawable/rounded_bg"
                android:backgroundTint="@color/transparent_white"
                tools:targetApi="n_mr1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/harmonia_dark"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="12sp"
                        android:text="Moyenne war"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text="Pos. moyenne"
                        android:textColor="@color/harmonia_dark"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text="Shocks rapportés"
                        android:textColor="@color/harmonia_dark"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/harmonia_dark"
                        android:fontFamily="@font/orbitron_semibold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:id="@+id/total_average"
                        tools:text="60"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/mk_position"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:id="@+id/map_average"
                        tools:text="106"/>

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/shock"
                            android:layout_marginEnd="2dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_marginStart="2dp"
                            android:fontFamily="@font/mk_position"
                            android:textSize="26sp"
                            android:gravity="center"
                            android:id="@+id/shock_count"
                            android:paddingBottom="5dp"
                            tools:text="24"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/lowest_score_layout"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/harmonia_dark"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="14sp"
                        android:paddingTop="5dp"
                        android:text="Pire score"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lose"
                        android:fontFamily="@font/orbitron_semibold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:id="@+id/lowest_score"
                        android:paddingBottom="5dp"
                        tools:text="41"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/harmonia_dark"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:id="@+id/lowest_score_war_name"
                        tools:text="vs XX"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/harmonia_dark"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:id="@+id/lowest_score_war_date"
                        android:paddingBottom="5dp"
                        tools:text="18/07/2021 - 22h"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/highest_score_layout"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/harmonia_dark"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="Meilleur score"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green"
                        android:fontFamily="@font/orbitron_semibold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:id="@+id/highest_score"
                        android:paddingBottom="5dp"
                        tools:text="106"/>




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/harmonia_dark"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:id="@+id/highest_score_war_name"
                        tools:text="vs OF"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/harmonia_dark"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:id="@+id/highest_score_war_date"
                        android:paddingBottom="5dp"
                        tools:text="18/07/2021 - 22h"/>


                </LinearLayout>

            </LinearLayout>




            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:targetApi="n_mr1"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Equipe la plus jouée"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/harmonia_dark"
                        android:paddingTop="5dp"
                        android:textSize="14sp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingVertical="5dp"
                        android:backgroundTint="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/most_played_team"
                            android:autoSizeTextType="uniform"
                            android:maxLines="1"
                            android:textColor="@color/harmonia_dark"
                            android:fontFamily="@font/orbitron_regular"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            tools:text="Revival"
                            tools:targetApi="o" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/most_played_team_total"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="14sp"
                            android:textColor="@color/harmonia_dark"
                            android:gravity="center"
                            tools:text="14 matchs joués"/>

                    </LinearLayout>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="La plus vaincue"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="@color/harmonia_dark"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingVertical="5dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/most_defeated_team"
                                android:textColor="@color/harmonia_dark"
                                android:fontFamily="@font/orbitron_regular"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:autoSizeTextType="uniform"
                                android:paddingHorizontal="5dp"
                                android:maxLines="1"
                                android:textSize="16sp"
                                tools:text="Omelette du Fromage"
                                tools:targetApi="o" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/most_defeated_team_total"
                                android:fontFamily="@font/montserrat_regular"
                                android:textSize="14sp"
                                android:textColor="@color/harmonia_dark"
                                android:gravity="center"
                                tools:text="14 matchs joués"/>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="La moins vaincue"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="@color/harmonia_dark"/>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingVertical="5dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/less_defeated_team"
                                android:autoSizeTextType="uniform"
                                android:maxLines="1"
                                android:textColor="@color/harmonia_dark"
                                android:fontFamily="@font/orbitron_regular"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:textSize="16sp"
                                tools:text="Revival"
                                tools:targetApi="o" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/less_defeated_team_total"
                                android:fontFamily="@font/montserrat_regular"
                                android:textSize="14sp"
                                android:textColor="@color/harmonia_dark"
                                android:gravity="center"
                                tools:text="14 matchs joués"/>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/rounded_bg"
                android:backgroundTint="?android:colorAccent"
                android:padding="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="14sp"
                        android:text="Plus large victoire"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:text="Plus lourde défaite"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/no_victory"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/montserrat_regular"
                            android:gravity="center"
                            android:text="Aucune"
                            android:textColor="@color/text_color"
                            android:textSize="16sp" />

                        <fr.harmoniamk.statsmk.ui.WarItemView
                            android:id="@+id/highest_victory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            app:win="true"
                            app:vertical="true"/>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/no_defeat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center"
                        android:text="Aucune"
                        android:textColor="@color/text_color"
                        android:textSize="16sp" />

                        <fr.harmoniamk.statsmk.ui.WarItemView
                            android:id="@+id/highest_defeat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            app:vertical="true" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:textColor="@color/text_color"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_bg"
                android:backgroundTint="@color/transparent_white"
                android:orientation="vertical"
                android:layout_marginBottom="15dp"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text="Circuit le plus joué"
                        android:textColor="@color/harmonia_dark"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">


                    <fr.harmoniamk.statsmk.ui.TrackView
                        android:id="@+id/most_played_trackview"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        app:collapsed="true" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text="Meilleur circuit"
                        android:textColor="@color/harmonia_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text="Pire circuit"
                        android:textColor="@color/harmonia_dark"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <fr.harmoniamk.statsmk.ui.TrackView
                        android:id="@+id/best_trackview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="1"
                        app:collapsed="true" />

                    <fr.harmoniamk.statsmk.ui.TrackView
                        android:id="@+id/worst_trackview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="1"
                        app:collapsed="true" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>



</ScrollView>
