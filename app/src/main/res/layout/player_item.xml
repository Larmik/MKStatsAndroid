<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
    android:background="@drawable/rounded_bg"
    android:backgroundTint="@color/white_alphaed"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:maxLines="1"
            android:paddingVertical="5dp"
            android:textColor="@color/text_color"
            tools:textColor="@color/harmonia_dark"
            android:textSize="20sp"
            tools:targetApi="o"
            tools:text="Lari" />


        <TextView
            android:id="@+id/player_pos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:visibility="gone"
            android:paddingHorizontal="15dp"
            android:maxLines="1"
            tools:visibility="visible"
            tools:text="11"
            android:fontFamily="@font/mk_position"
            android:textSize="36sp"
            android:layout_weight="1"
            android:textColor="@color/harmonia_dark"
            tools:targetApi="o" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:id="@+id/shock_layout"
        android:visibility="gone">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/mk_position"
            android:id="@+id/remove_shock"
            android:paddingStart="15dp"
            android:text="@string/minus"
            android:textColor="@color/black"
            android:paddingEnd="5dp"
            android:textSize="26sp"/>


        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:src="@drawable/shock"
            android:contentDescription="@string/shocks_rapport_s" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/mk_position"
            android:id="@+id/add_shock"
            android:text="@string/plus"
            android:textColor="@color/black"
            android:paddingStart="5dp"
            android:paddingEnd="15dp"
            android:textSize="26sp"/>

    </LinearLayout>



    </LinearLayout>


