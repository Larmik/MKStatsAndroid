<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?android:colorPrimary"
    android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Statistiques hebdomadaires"
            android:textColor="@color/harmonia_dark"
            android:textSize="20sp" />


        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:progressTint="?android:colorAccent"
            tools:targetApi="n_mr1"
            android:layout_below="@id/title"
            android:indeterminate="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/title"
            android:visibility="gone"
            tools:visibility="visible"
            android:paddingHorizontal="15dp"
            android:id="@+id/main_layout">


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/week_btn"
                    android:layout_weight="1"
                    android:paddingVertical="10dp"
                    android:textColor="@color/harmonia_dark"
                    android:fontFamily="@font/roboto"
                    android:textAlignment="center"
                    android:text="Hebdo"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:paddingVertical="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/harmonia_dark"
                    android:id="@+id/month_btn"
                    android:textAlignment="center"
                    android:text="Mensuel"/>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"/>

            <androidx.core.widget.NestedScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:textColor="@color/harmonia_dark"
                                    android:fontFamily="@font/orbitron_semibold"
                                    android:textSize="26sp"
                                    android:gravity="center"
                                    android:id="@+id/war_played"
                                    tools:text="73"/>
                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:textColor="@color/harmonia_dark"
                                    android:fontFamily="@font/orbitron_semibold"
                                    android:textSize="16sp"
                                    android:gravity="center"
                                    android:paddingBottom="5dp"
                                    android:text="wars jouées"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:paddingBottom="10dp"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/rounded_bg"
                                    android:backgroundTint="@color/transparent_white"
                                    tools:targetApi="n_mr1"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:textColor="@color/harmonia_dark"
                                            android:fontFamily="@font/montserrat_bold"
                                            android:textSize="14sp"
                                            android:gravity="center"
                                            android:paddingTop="5dp"
                                            android:text="V"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:textColor="@color/harmonia_dark"
                                            android:fontFamily="@font/montserrat_bold"
                                            android:textSize="14sp"
                                            android:gravity="center"
                                            android:paddingTop="5dp"
                                            android:text="N"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:textColor="@color/harmonia_dark"
                                            android:fontFamily="@font/montserrat_bold"
                                            android:textSize="14sp"
                                            android:gravity="center"
                                            android:paddingTop="5dp"
                                            android:text="D"/>

                                    </LinearLayout>



                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:textColor="@color/harmonia_dark"
                                            android:fontFamily="@font/orbitron_semibold"
                                            android:textSize="20sp"
                                            android:gravity="center"
                                            android:id="@+id/win_text"
                                            android:paddingBottom="5dp"
                                            tools:text="43"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:textColor="@color/harmonia_dark"
                                            android:fontFamily="@font/orbitron_semibold"
                                            android:textSize="20sp"
                                            android:gravity="center"
                                            android:id="@+id/tie_text"
                                            android:paddingBottom="5dp"
                                            tools:text="2"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:textColor="@color/harmonia_dark"
                                            android:fontFamily="@font/orbitron_semibold"
                                            android:textSize="20sp"
                                            android:gravity="center"
                                            android:id="@+id/lose_text"
                                            android:paddingBottom="5dp"
                                            tools:text="28"/>

                                    </LinearLayout>


                                </LinearLayout>
                            </LinearLayout>



                        </LinearLayout>

                        <fr.harmoniamk.statsmk.ui.PieChart
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:id="@+id/piechart"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginBottom="10dp"
                        android:paddingVertical="5dp"
                        android:background="@drawable/rounded_bg"
                        android:backgroundTint="@color/transparent_white"
                        tools:targetApi="n_mr1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/harmonia_dark"
                                android:fontFamily="@font/montserrat_bold"
                                android:textSize="13sp"
                                android:text="Moyenne war"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textColor="@color/harmonia_dark"
                                android:fontFamily="@font/montserrat_bold"
                                android:textSize="13sp"
                                android:gravity="center"
                                android:text="Moyenne map"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textColor="@color/harmonia_dark"
                                android:fontFamily="@font/montserrat_bold"
                                android:textSize="13sp"
                                android:gravity="center"
                                android:text="Maps gagnées"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/text_color"
                                android:fontFamily="@font/orbitron_semibold"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:id="@+id/total_average"
                                tools:text="60"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/text_color"
                                android:fontFamily="@font/orbitron_semibold"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:id="@+id/map_average"
                                tools:text="106"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:fontFamily="@font/orbitron_semibold"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:id="@+id/maps_won"
                                tools:text="98 / 144"/>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:targetApi="n_mr1"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/most_played_team_layout"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Equipe la plus jouée"
                                android:gravity="center"
                                android:fontFamily="@font/montserrat_bold"
                                android:textColor="@color/harmonia_dark"
                                android:paddingTop="5dp"
                                android:textSize="14sp"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:paddingVertical="5dp"
                                android:backgroundTint="@color/white">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/most_played_team"
                                    android:autoSizeTextType="uniform"
                                    android:maxLines="1"
                                    android:textColor="@color/harmonia_dark"
                                    android:fontFamily="@font/orbitron_regular"
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:textSize="16sp"
                                    tools:text="Revival"
                                    tools:targetApi="o" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:id="@+id/most_played_team_total"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:textSize="14sp"
                                    android:textColor="@color/harmonia_dark"
                                    android:gravity="center"
                                    tools:text="14 matchs joués"/>

                            </LinearLayout>


                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/most_defeated_team_layout"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="La plus vaincue"
                                    android:gravity="center"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:textColor="@color/harmonia_dark"/>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingVertical="5dp"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/most_defeated_team"
                                        android:textColor="@color/harmonia_dark"
                                        android:fontFamily="@font/orbitron_regular"
                                        android:gravity="center"
                                        android:layout_weight="1"
                                        android:autoSizeTextType="uniform"
                                        android:paddingHorizontal="5dp"
                                        android:maxLines="1"
                                        android:textSize="16sp"
                                        tools:text="Omelette du Fromage"
                                        tools:targetApi="o" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:id="@+id/most_defeated_team_total"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:textSize="14sp"
                                        android:textColor="@color/harmonia_dark"
                                        android:gravity="center"
                                        tools:text="14 matchs joués"/>

                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/less_defeated_team_layout"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="La moins vaincue"
                                    android:gravity="center"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:textColor="@color/harmonia_dark"/>



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingVertical="5dp"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/less_defeated_team"
                                        android:autoSizeTextType="uniform"
                                        android:maxLines="1"
                                        android:textColor="@color/harmonia_dark"
                                        android:fontFamily="@font/orbitron_regular"
                                        android:gravity="center"
                                        android:layout_weight="1"
                                        android:textSize="16sp"
                                        tools:text="Revival"
                                        tools:targetApi="o" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:id="@+id/less_defeated_team_total"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:textSize="14sp"
                                        android:textColor="@color/harmonia_dark"
                                        android:gravity="center"
                                        tools:text="14 matchs joués"/>

                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>



                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/rounded_bg"
                        android:backgroundTint="?android:colorAccent"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"
                                android:gravity="center"
                                android:fontFamily="@font/montserrat_bold"
                                android:textSize="14sp"
                                android:text="Plus large victoire"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"
                                android:fontFamily="@font/montserrat_bold"
                                android:textSize="14sp"
                                android:gravity="center"
                                android:text="Plus lourde défaite"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <fr.harmoniamk.statsmk.ui.WarItemView
                                android:id="@+id/highest_victory"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                android:layout_weight="1"
                                app:win="true"
                                app:vertical="true"/>

                            <fr.harmoniamk.statsmk.ui.WarItemView
                                android:id="@+id/highest_defeat"
                                android:layout_width="0dp"
                                android:layout_marginHorizontal="5dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:vertical="true"/>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:textColor="@color/text_color"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_bg"
                        android:layout_marginBottom="15dp"
                        android:backgroundTint="@color/transparent_white"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="center"
                                android:text="Circuit le plus joué"
                                android:textColor="@color/harmonia_dark"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <fr.harmoniamk.statsmk.ui.TrackView
                                android:id="@+id/most_played_trackview"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                app:collapsed="true" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="center"
                                android:text="Meilleur circuit"
                                android:textColor="@color/harmonia_dark"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="center"
                                android:text="Pire circuit"
                                android:textColor="@color/harmonia_dark"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <fr.harmoniamk.statsmk.ui.TrackView
                                android:id="@+id/best_trackview"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                android:layout_weight="1"
                                app:collapsed="true" />

                            <fr.harmoniamk.statsmk.ui.TrackView
                                android:id="@+id/worst_trackview"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                android:layout_weight="1"
                                app:collapsed="true" />


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>



        </LinearLayout>

    </RelativeLayout>



